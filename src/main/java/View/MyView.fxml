<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import View.MazeDisplayer?>


<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="View.MyViewController"
            prefHeight="600.0" prefWidth="800.0">

    <!-- Maze Canvas -->
    <MazeDisplayer fx:id="mazeDisplayer" layoutX="50" layoutY="100" width="700" height="400"/>

    <!-- Labels and Inputs -->
    <Label layoutX="50" layoutY="20" text="Rows:"/>
    <TextField fx:id="textField_mazeRows" layoutX="90" layoutY="15" prefWidth="60"/>

    <Label layoutX="170" layoutY="20" text="Columns:"/>
    <TextField fx:id="textField_mazeColumns" layoutX="230" layoutY="15" prefWidth="60"/>

    <!-- Player Row/Col Display -->
    <Label layoutX="320" layoutY="20" text="Player Row:"/>
    <Label fx:id="playerRow" layoutX="400" layoutY="20"/>

    <Label layoutX="470" layoutY="20" text="Player Col:"/>
    <Label fx:id="playerCol" layoutX="550" layoutY="20"/>

    <!-- Buttons -->
    <Button fx:id="generateButton" layoutX="620" layoutY="15" text="Generate Maze" onAction="#generateMaze"/>
    <Button fx:id="solveButton" layoutX="720" layoutY="15" text="Solve Maze" onAction="#solveMaze"/>

</AnchorPane>
