

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="main.java.View.MyViewController"
            prefHeight="600.0" prefWidth="800.0">


    <Canvas fx:id="mazeCanvas" layoutX="50" layoutY="100" width="700" height="400"/>

    <Label layoutX="50" layoutY="20" text="Rows:"/>
    <TextField fx:id="rowsField" layoutX="90" layoutY="15" prefWidth="60"/>


    <Label layoutX="170" layoutY="20" text="Columns:"/>
    <TextField fx:id="colsField" layoutX="230" layoutY="15" prefWidth="60"/>


    <Button fx:id="generateButton" layoutX="320" layoutY="15" text="Generate Maze"/>
    
    <Button fx:id="solveButton" layoutX="450" layoutY="15" text="Solve Maze"/>

</AnchorPane>
