<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import View.MazeDisplayer?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="View.MyViewController"
            prefHeight="600.0" prefWidth="800.0" style="-fx-padding: 20;">

    <!-- TOP BAR - TITLE -->
    <top>
        <Label text="Maze Game"
               style="-fx-font-size: 24px; -fx-font-weight: bold;"
               BorderPane.alignment="CENTER"/>
    </top>

    <!-- CENTER - Maze Canvas -->
    <center>
        <StackPane>
            <MazeDisplayer fx:id="mazeDisplayer" width="700" height="400"/>
            <ImageView fx:id="victoryGif" fitWidth="400" fitHeight="300" visible="false"/>
        </StackPane>
    </center>

    <!-- BOTTOM BAR - Player info -->
    <bottom>
        <HBox spacing="20" alignment="CENTER">
            <Label fx:id="playerRow" text="Row: 0"/>
            <Label fx:id="playerCol" text="Col: 0"/>
        </HBox>
    </bottom>

    <!-- LEFT - Inputs -->
    <left>
        <VBox spacing="10" alignment="TOP_LEFT">
            <HBox spacing="5">
                <Label text="Rows:"/>
                <TextField fx:id="mazeRows" prefWidth="60"/>
            </HBox>
            <HBox spacing="5">
                <Label text="Columns:"/>
                <TextField fx:id="mazeColumns" prefWidth="60"/>
            </HBox>
            <HBox spacing="10">
                <Button fx:id="startButton" text="Start" onAction="#onStartClicked"/>
                <Button fx:id="saveButton" text="ðŸ’¾ Save" onAction="#handleSaveMaze"/>
                <Button fx:id="loadButton" text="ðŸ“‚ Load" onAction="#handleLoadMaze"/>
            </HBox>
        </VBox>
    </left>

    <!-- RIGHT - Action buttons -->
    <right>
        <VBox spacing="10" alignment="TOP_RIGHT">
            <Button fx:id="solveButton" text="Solve Maze" onAction="#solveMaze"/>
            <Button fx:id="btnShowNextStep" text="Show Next Step" onAction="#showNextStep"/>
            <Button text="Remove Solution" onAction="#removeSolution"/>
            <Button text="Remove Next Step" onAction="#removeNextStep"/>
        </VBox>
    </right>

</BorderPane>
