<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import View.MazeDisplayer?>


<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="View.MyViewController"
            prefHeight="600.0" prefWidth="800.0">

    <!-- Maze Canvas -->
    <MazeDisplayer fx:id="mazeDisplayer" layoutX="50" layoutY="100" width="700" height="400"/>

    <!-- Title Label -->
    <Label layoutX="50" layoutY="50" text="Maze Generator and Solver" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- Labels and Inputs -->
    <Label layoutX="50" layoutY="20" text="Rows:"/>
    <TextField fx:id="mazeRows" layoutX="90" layoutY="15" prefWidth="60"/>

    <Label layoutX="170" layoutY="20" text="Columns:"/>
    <TextField fx:id="mazeColumns" layoutX="230" layoutY="15" prefWidth="60"/>

</AnchorPane>
